{# Home Page #}
{% block html_head_container %}

	{% include 'html-header.twig' %}
	{% block head %}{% endblock %}
</head>{% endblock %}<body class="{{body_class}}" data-template="base.twig">
{{ function('wp_body_open') }}
<a class="skip-link screen-reader-text" href="#content">{{ _e( 'Skip to content') }}</a>
<header class="header">
	{% block header %}
		<div class="wrapper">
			<h1 class="hdr-logo text-center mb-20 hover:underline" role="banner">
				<a class="hdr-logo-link text-2xl" href="{{site.url}}" rel="home">{{site.name}}</a>
			</h1>
			<nav id="nav-main" class="nav-main  py-5 border-t border-black" role="navigation">
				{% include "menu.twig" with {'items': menu.get_items} %}
			</nav>
			<!-- #nav -->
		</div>
	{% endblock %}
</header>

<section id="content" role="main" class="content-wrapper">
	{% if title %}
		<!-- this title comes from the base.twig file -->
		<h1 class="text-5xl text-center mb-20">{{title}}</h1>
	{% endif %}
	<div class="wrapper grid justify-center">
		{% block content %}
			Sorry, no content
		{% endblock %}
	</div>
	{% if sidebar %}
		<aside class="layout-sidebar">
			{{sidebar}}
		</aside>
	{% endif %}
</section>

{% block footer %}
	<footer id="footer" class="grid justify-center">
		{% include 'footer.twig' %}
	</footer>
	{{ function('wp_footer') }}
{% endblock %}</body></html>
