{# TEMPLATE: home page #}

{% extends "base.twig" %}

{% block content %}

	<div
		class="content-wrapper page-buildings">
		{# DEFAULT PAGE CONTENT #}
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section class="article-content">
				<h1 class="article-h1 text-5xl text-center py-3">{{post.title}}</h1>
				<div class="article-body">
					{{post.content}}
				</div>
			</section>
		</article>

		{# BUILDINGS #}
		<section>
			<h2>Buildings</h2>
			<div class="grid justify-center grid-cols-4 grid-rows-4">
			<!-- <ul class="grid justify-center"> -->
				{# loop through the buildings returned #}
				{% for building in buildings %}
					{# load the building tease template #}
					{% include 'tease-buildings-copy.twig' with { post: building} %}
				{% endfor %}
			<!-- </ul> -->
			</div>
		</section>
	</div>

	<div
		class="debug p-8 bg-debug">
		{# useful for debugging, delete later #}
		<h1>Debug info</h1>

		<p class="pb-4">post name:
			{{post.name}}</p>

		<p>file name: page-home.twig</p>

		{# Output what is in the post #}
		{# {{dump(post)}} #}
	</div>

	<!-- /content-wrapper -->
{% endblock %}
