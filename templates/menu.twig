{# MENU COMES FROM menu.twig #}
{# Menu Items#}

{% if menu %}
	<ul class="hidden lg:first:flex lg:first:place-content-around lg:*:even:invisible lg:li:a:visible lg:text-center lg:pt-1 lg:pb-1 lg:visible">
		{% for item in items %}
			<li class="{{ item.classes | join(' ') }} group">
				<a class="lg:group-hover:visible lg:hover:border-b border-gray-900 lg:hover:underline" target="{{ item.target }}" href="{{ item.link }}">{{ item.title }}</a>
				{% if item.children %}
					<ul class="first:flex first:place-content-around *:even:invisible li:a:visible text-center pt-1 pb-1">
						{% for child in item.children %}
							<li class="{{ child.classes | join(' ') }} group">
								<a class="group-hover:visible hover:border-b border-gray-900 hover:underline" target="{{ child.target }}" href="{{ child.link }}">{{ child.title }}</a>
							</li>
						{% endfor %}
					</ul>
				{% endif %}				
			</li>
		{% endfor %}
	</ul>
	<button class="lg:hidden visible left">
		<span class="sr-only">Open main menu</span>
		<svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
			<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"/>
		</svg>
	</button>
{% endif %}
