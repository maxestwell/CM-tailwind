<article class="tease tease-{{post.type}}" id="tease-{{post.id}}">
	{% block content %}
		<h2 class="h2">
			<a href="{{post.link}}">{{post.title}}</a>
		</h2>
		<div>{{ post.excerpt({ words:15, read_more: "<div><span class='hover:underline'>Keep reading &rarr;</span></div>" }) }}</div>
	{% if post.thumbnail %}
		<img src="{{post.thumbnail.src}}"/>
	{% endif %}
{% endblock %}</article>
